
<form>
  <label>Search by Category</label>
  <input name="qs" category="qs"></input>
</form>
<p><%= link_to "Decadegraph", "decadegraph",class: "btn btn-default active" %>  </p>

<p>Find me in app/views/suspensions/index.html.erb</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Team
      </th>
      <th>
        Games
      </th>
      <th>
        <form>
          <select>
              <option>Category</option>
              <option category="PEDs">PEDs</option>
              <option category="Substance Abuse">Substance Abuse</option>
              <option category="Personal Conduct">Personal Conduct</option>
              <option category="In-Game Violence">In-Game Violence</option>
          </select>
        </form>
      </th>
      <th>
        Description
      </th>
      <th>
        Year
      </th>
      <th>
        Source
      </th>
    </tr>
  </thead>
  <tbody>
    <% @suspensions.each do |suspension| %>
    <tr>
      <td>
        <%= suspension.name %>
      </td>
      <td>
        <%= suspension.team %>
      </td>
      <td>
        <%= suspension.games %>
      </td>
      <td>
        <%= suspension.category %>
      </td>
      <td>
        <%= suspension.description %>
      </td>
      <td>
        <%= suspension.year %>
      </td>
      <td>
        <%= suspension.source %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
