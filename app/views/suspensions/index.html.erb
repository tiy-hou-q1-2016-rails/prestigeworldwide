
<form>
  <input name="qs" placeholder="Search by Name"></input>
<select>
    <option>Category</option>
    <option value="peds">PEDs</option>
    <option value="substance abuse">Substance Abuse</option>
    <option value="personal conduct">Personal Conduct</option>
    <option value="in-game violence">In-Game Violence</option>
</select>
  <input type="submit">
</form>
<p><%= link_to "Decadegraph", "decadegraph",class: "btn btn-default active" %>  </p>

<p>Find me in app/views/suspensions/index.html.erb</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Team
      </th>
      <th>
        Games
      </th>
      <th>
        Category
      </th>
      <th>
        Description
      </th>
      <th>
        Year
      </th>
      <th>
        Source
      </th>
    </tr>
  </thead>
  <tbody>
    <% @suspensions.each do |suspension| %>
    <tr>
      <td>
        <%= suspension.name %>
      </td>
      <td>
        <%= suspension.team %>
      </td>
      <td>
        <%= suspension.games %>
      </td>
      <td>
        <%= suspension.category %>
      </td>
      <td>
        <%= suspension.description %>
      </td>
      <td>
        <%= suspension.year %>
      </td>
      <td>
        <%= suspension.source %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
